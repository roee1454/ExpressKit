{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
